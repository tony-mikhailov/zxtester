{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf build"
        },
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug"
        }
    ]
}