{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug with ST-Link",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "gdb-multiarch",
            "device": "RP2040",
            "configFiles": [
                // "interface/stlink.cfg",
                // "target/rp2040.cfg"
                "${workspaceFolder}/debug_stlink.cfg"
            ],
            "svdFile": "/home/tony/space/devices/rp2040-zero-dev/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            "openOCDLaunchCommands": [
                "adapter speed 1000",
                "transport select hla_swd"
            ],
            "showDevDebugOutput": true
        }
    ]
}


